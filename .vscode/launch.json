	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'canton'",
			"cargo": {
				"args": [
					"build",
					"--bin=canton",
					"--package=canton"
				],
				"filter": {
					"name": "canton",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'canton'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=canton",
					"--package=canton"
				],
				"filter": {
					"name": "canton",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'tracy_test'",
			"cargo": {
				"args": [
					"build",
					"--bin=tracy_test",
					"--package=canton"
				],
				"filter": {
					"name": "tracy_test",
					"kind": "bin"
				}
			},
			"args": [],
			"env": {
				"LD_LIBRARY_PATH": "target/debug/deps"
			},
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'tracy_test'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=tracy_test",
					"--package=canton"
				],
				"filter": {
					"name": "tracy_test",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}